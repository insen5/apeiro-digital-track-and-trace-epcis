# ============================================
# EPCIS Track and Trace - Development Environment
# ============================================
# Copy this file to .env and update values as needed
# cp .env.example .env

# ============================================
# Service Ports
# ============================================
AUTH_PORT=3001
MANUFACTURER_PORT=3002
SUPPLIER_PORT=3003
PPB_PORT=3004
USER_FACILITY_PORT=3005
NOTIFICATION_PORT=3006
FRONTEND_PORT=8097

# ============================================
# PostgreSQL - Auth Service
# ============================================
POSTGRES_AUTH_HOST=postgres-auth
POSTGRES_AUTH_PORT=5432
POSTGRES_AUTH_USER=postgres
POSTGRES_AUTH_PASSWORD=postgres
POSTGRES_AUTH_DB=auth_db

# External port (for local connections)
POSTGRES_AUTH_PORT_EXTERNAL=5433

# ============================================
# PostgreSQL - Manufacturer Service
# ============================================
POSTGRES_MANUFACTURER_HOST=postgres-manufacturer
POSTGRES_MANUFACTURER_PORT=5432
POSTGRES_MANUFACTURER_USER=postgres
POSTGRES_MANUFACTURER_PASSWORD=postgres
POSTGRES_MANUFACTURER_DB=manufacturer_db

# External port (for local connections)
POSTGRES_MANUFACTURER_PORT_EXTERNAL=5434

# ============================================
# PostgreSQL - Supplier Service
# ============================================
POSTGRES_SUPPLIER_HOST=postgres-supplier
POSTGRES_SUPPLIER_PORT=5432
POSTGRES_SUPPLIER_USER=postgres
POSTGRES_SUPPLIER_PASSWORD=postgres
POSTGRES_SUPPLIER_DB=supplier_db

# External port (for local connections)
POSTGRES_SUPPLIER_PORT_EXTERNAL=5435

# ============================================
# PostgreSQL - PPB Service
# ============================================
POSTGRES_PPB_HOST=postgres-ppb
POSTGRES_PPB_PORT=5432
POSTGRES_PPB_USER=postgres
POSTGRES_PPB_PASSWORD=postgres
POSTGRES_PPB_DB=ppb_db

# External port (for local connections)
POSTGRES_PPB_PORT_EXTERNAL=5436

# ============================================
# PostgreSQL - User Facility Service
# ============================================
POSTGRES_USER_FACILITY_HOST=postgres-user-facility
POSTGRES_USER_FACILITY_PORT=5432
POSTGRES_USER_FACILITY_USER=postgres
POSTGRES_USER_FACILITY_PASSWORD=postgres
POSTGRES_USER_FACILITY_DB=user_facility_db

# External port (for local connections)
POSTGRES_USER_FACILITY_PORT_EXTERNAL=5437

# ============================================
# PostgreSQL - Notification Service
# ============================================
POSTGRES_NOTIFICATION_HOST=postgres-notification
POSTGRES_NOTIFICATION_PORT=5432
POSTGRES_NOTIFICATION_USER=postgres
POSTGRES_NOTIFICATION_PASSWORD=postgres
POSTGRES_NOTIFICATION_DB=notification_db

# External port (for local connections)
POSTGRES_NOTIFICATION_PORT_EXTERNAL=5438

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES=7d

# ============================================
# Service URLs (for inter-service communication)
# ============================================
TNT_AUTH_URL=http://auth-service:3000
TNT_MANUFACTURER_URL=http://manufacturer-service:3000
TNT_SUPPLIER_URL=http://supplier-service:3000
TNT_PPB_URL=http://ppb-service:3000
TNT_USERFACILITY_URL=http://user-facility-service:3000
TNT_NOTIFICATION_URL=http://notification-service:3000
TNT_EPCIS_URL=http://quarkus-rest-api-ce:8080

# ============================================
# Frontend URLs (for email links, redirects)
# ============================================
FRONTEND_MANUFACTURER_DOMAIN=http://localhost:8097/manufacturer
FRONTEND_CPA_DOMAIN=http://localhost:8097/cpa
FRONTEND_USERFACILITY_DOMAIN=http://localhost:8097/user-facility
FRONTEND_PPB_DOMAIN=http://localhost:8097/ppb
FRONTEND_DHA_DOMAIN=http://localhost:8097

# ============================================
# Next.js Frontend Environment Variables
# ============================================
NEXT_PUBLIC_API_AUTH_BASE_URL=http://localhost:3001/api
NEXT_PUBLIC_API_MANUFACTURER_BASE_URL=http://localhost:3002/api
NEXT_PUBLIC_API_SUPPLIER_BASE_URL=http://localhost:3003/api
NEXT_PUBLIC_API_PPB_BASE_URL=http://localhost:3004/api
NEXT_PUBLIC_API_USER_FACILITY_BASE_URL=http://localhost:3005/api
NEXT_PUBLIC_API_NOTIFICATION_BASE_URL=http://localhost:3006/api
NEXT_PUBLIC_API_EPCIS_BASE_URL=http://localhost:8080

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=openepcis-kafka:9092

# ============================================
# OpenSearch Configuration
# ============================================
OPENSEARCH_HOST=opensearch-node-01
OPENSEARCH_PORT=9200
OPENSEARCH_HOSTS=opensearch-node-01:9200

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
APP_NAME=epcis-track-and-trace
API_PREFIX=api
APP_FALLBACK_LANGUAGE=en
APP_HEADER_LANGUAGE=x-custom-lang

# ============================================
# Mail Configuration (for notifications)
# ============================================

# Environment Configuration for Staging
# Copy to .env.staging and fill in actual values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_DB=kenya_tnt_staging
POSTGRES_USER=tnt_staging_user
POSTGRES_PASSWORD=<CHANGE_THIS_STRONG_PASSWORD>
POSTGRES_PORT=5432

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=staging
PORT=4000
LOG_LEVEL=info

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=<CHANGE_THIS_STRONG_SECRET>
JWT_EXPIRES_IN=7d

# ===========================================
# GS1 CONFIGURATION
# ===========================================
GS1_COMPANY_PREFIX=8886001

# ===========================================
# EPCIS SERVICE
# ===========================================
EPCIS_URL=http://epcis-service:8080

# ===========================================
# EXTERNAL APIS (Optional - PPB Integration)
# ===========================================
PPB_TERMINOLOGY_API_URL=https://staging.ppb.go.ke/api/terminology
PPB_TERMINOLOGY_API_KEY=<YOUR_PPB_API_KEY>
PPB_UAT_API_URL=https://staging.ppb.go.ke/api/uat
PPB_UAT_API_KEY=<YOUR_PPB_UAT_API_KEY>

# ===========================================
# FRONTEND
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://staging-api.example.com/api

# ===========================================
# MONITORING (Optional)
# ===========================================
SENTRY_DSN=<YOUR_SENTRY_DSN>



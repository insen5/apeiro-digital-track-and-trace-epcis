# ============================================
# KENYA TNT SYSTEM - PRODUCTION ENVIRONMENT
# ============================================
# Copy this file to .env.production and update values
# Command: cp env.production.template .env.production

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=kenya_tnt_db
POSTGRES_USER=tnt_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_PORT=5432

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=4000

# Frontend URL (Update with your domain or public IP)
NEXT_PUBLIC_API_URL=http://YOUR_DOMAIN_OR_IP:4000/api

# ============================================
# JWT CONFIGURATION
# ============================================
# IMPORTANT: Generate a secure random string!
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d

# ============================================
# GS1 CONFIGURATION
# ============================================
# Your organization's GS1 Company Prefix
GS1_COMPANY_PREFIX=8886001

# ============================================
# EPCIS SERVICE
# ============================================
EPCIS_URL=http://epcis-service:8080

# ============================================
# EXTERNAL API INTEGRATIONS (Optional)
# ============================================
# PPB Terminology API
PPB_TERMINOLOGY_API_URL=https://terminology.health.go.ke
PPB_TERMINOLOGY_API_KEY=your_ppb_api_key_here

# PPB UAT Facilities API
PPB_UAT_API_URL=https://uat.health.go.ke
PPB_UAT_API_KEY=your_uat_api_key_here

# ============================================
# SMTP CONFIGURATION (Optional - for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@tnt.go.ke

